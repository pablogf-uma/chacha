# -*- MakeFile -*-

chacha20: chacha20.o quarter_round.o columns.o diagonals.o state_init.o
	gcc chacha20.o quarter_round.o columns.o diagonals.o state_init.o -o chacha20

chacha20.o: chacha20.c
	gcc -c chacha20.c

quarter_round.o: quarter_round.c
	gcc -c quarter_round.c

columns.o: columns.c
	gcc -c columns.c

diagonals.o: diagonals.c
	gcc -c diagonals.c

state_init.o: state_init.c
	gcc -c state_init.c

clean: # Used to remove all files generated by the build process.
	cmd /C del /Q chacha20.exe chacha20.o quarter_round.o columns.o diagonals.o state_init.o

.PHONY: clean # This tells make that clean is not a file, but a command.